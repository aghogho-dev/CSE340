<% if (title) { %>
    <h1><%= title %></h1>
  <% } else {
      res.redirect('/')
  } %>

<%- messages() %>

<section id="login-signup">

    <form action="" id="login-signup-form">
        <label for="email"><span class="form-element">Email:</span></label>
        <input type="email" name="email" id="email">
        <label for="password"><span class="form-element">Password:</span></label>
        <input type="password" name="password" id="password">
        <button type="submit" id="login-button">Login</button>
    </form>

    <p class="form-element">No account? <a href="/account/register">Sign-up</a></p>

</section>


    